{
  "image": "tensorflow/tensorflow:2.12.0-gpu-jupyter",
  "mounts": [{ "source": "d:/workspace", "target": "/workspace", "type": "bind" }],
  "runArgs": [ "--gpus", "all", "--ipc=host", "--ulimit", "memlock=-1", "--ulimit", "stack=67108864" ],
  "postCreateCommand": ["pip3 install --user -r requirements.txt","git clone https://github.com/matteo-ronchetti/torch-radon.git",
              "cd torch-radon",
              "python setup.py install"],
  "forwardPorts": [6006],
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": ["ms-python.python"]
    }
  }
}